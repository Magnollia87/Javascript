<SCRIPT LANGUAGE = "JavaScript">
var yourName = prompt("what is your name ?");

if  (yourName == null)
{
document.write("your answer isn't correct!");
 }
else
{

document.write("hallo " + yourName + "!");

var total = 0;
var yourName = yourName ;
for(indx in yourName)
{

 if (yourName[indx] == 'a')
{
total = total + 1
}

}

document.write (" - a was used " + total + " times");
}

</SCRIPT>
<BODY>
</BODY>
</HTML> 
